#include "holberton.h"

/**
 * *leet - encodes a string into 1337
 * *@a: input array to modify
 * Return: encode string
 */

char *leet(char *a)
{
	int i = 0, j;
	char let[] = {"aAbBcCdDeEfFgGhHiIjJkKlLmMnNoOpPqQrRsStTuUvVwWxXyYzZ"};
	char num[] = {"nNoOpPqQrRsStTuUvVwWxXyYzZaAbBcCdDeEfFgGhHiIjJkKlLmM"};

	while (a[i] != '\0')
	{
		j = 0;
		while (let[j] != '\0')
		{
			if (a[i] == let[j])
				a[i] = num[j];
			j++;
		}
		i++;
	}
	return (a);
}
